    <script>
        document.getElementById('account-detail-tab').addEventListener('click', function(event) {
            // Récupérer l'email de l'utilisateur (assurez-vous que cet élément existe)
            var userEmail = '<%=session.user.email%>';

            fetch('/accountDetails', {
                method: 'POST',
                headers: {
                    'CSRF-Token': '<%=csrfToken%>',
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ email: userEmail })
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Erreur réseau');
                }
                return response.json();
            })
            .then(data => {
                if (data) {
                    console.log(data);
                    document.getElementById('firstName').value = data.firstName || '';
                    document.getElementById('lastName').value = data.lastName || '';
                    document.getElementById('email').value = data.email || '';
                    document.getElementById('siret').value = data.siret || '';
                    document.getElementById('address').value = data.address || '';
                    document.getElementById('phone').value = data.phone || '';
                    document.getElementById('companyName').value = data.companyName || '';
                } else {
                    console.error('Aucune donnée reçue');
                }
            })
            .catch(error => {
                console.error('Erreur:', error);
            });
        });
    </script>
