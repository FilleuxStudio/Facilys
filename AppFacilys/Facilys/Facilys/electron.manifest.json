{
  "executable": "Facilys",
  "splashscreen": {
    "imageFile": "wwwroot/assets/images/logo-light.png"
  },
  "name": "Facilys",
  "author": "FilleuxStudio",
  "singleInstance": false,
  "environment": "Production",
  "build": {
    "appId": "com.Facilys.app",
    "productName": "Facilys",
    "copyright": "Copyright Â© 2025 FilleuxStudio",
    "buildVersion": "1.0.0",
    "compression": "maximum",
    "directories": {
      "output": "../../../bin/Desktop"
    },
    "win": {
      "icon": "../../../wwwroot/icon-256.ico"
    },
    "linux": {
      "icon": "../../../wwwroot/icon-256.png"
    },
    "extraResources": [
      {
        "from": "./bin",
        "to": "bin",
        "filter": [ "**/*" ]
      }
    ],
    "files": [
      {
        "from": "./ElectronHostHook/node_modules",
        "to": "ElectronHostHook/node_modules",
        "filter": [ "**/*" ]
      },
      "**/*"
    ]
  }
}