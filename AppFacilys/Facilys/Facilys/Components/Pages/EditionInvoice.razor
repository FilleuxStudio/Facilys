                                @foreach (var item in managerInvoiceViewModel.VehicleItems)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </InputSelect>
                        </div><!-- end col -->
                    </div><!--end card-body-->
                </div><!--end card-->
            </div> <!--end col-->
        </div><!--end row-->

