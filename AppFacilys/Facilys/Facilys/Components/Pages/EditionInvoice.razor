@page "/editionInvoices"
@rendermode InteractiveServer
@inject PageTitleService PageTitleService
@inject ApplicationDbContext DbContext
@inject IJSRuntime JSRuntime
@inject ILogger<EditionInvoice> Logger

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col">
                        <h4 class="card-title">Edition de factures & Ordre de réparations</h4>
                    </div><!--end col-->
                </div><!--end row-->
            </div><!--end card-header-->
            <div class="card-body pt-0">
                <ul class="nav nav-pills nav-justified mb-1 pb-1 border-dashed-bottom">
                    <li class="nav-item waves-effect waves-light">
                        <NavLink class="nav-link active" href="/editionInvoices">Edition</NavLink>
                    </li>
                    <li class="nav-item waves-effect waves-light">
                        <NavLink class="nav-link" href="/managerInvoices">Gestion des factures</NavLink>
                    </li>
                    <li class="nav-item waves-effect waves-light">
                        <NavLink class="nav-link" href="/settingInvoices">Paramètres</NavLink>
                    </li>
                </ul>
            </div>
        </div>

        @if (managerInvoiceViewModel.Edition == null)
        {
            <div class="alert alert-warning shadow-sm border-theme-white-2" role="alert">
                <div class="d-inline-flex justify-content-center align-items-center thumb-xs bg-warning rounded-circle mx-auto me-1">
                    <i class="fas fa-exclamation align-self-center mb-0 text-white "></i>
                </div>
                Les paramètres de facturation n'ont pas été renseignés. Veuillez vous rendre dans l'onglet 'Paramètres' pour remplir les informations obligatoires.
            </div>
        }

        <div class="row justify-content-center">
            <div class="col-12">
                <div class="card">
                    <div class="card-body pt-0">
                        <div class="row mt-3">
                            <div class="col-4 align-self-center">
                                <img src="@managerInvoiceViewModel.CompanySettings.Logo" alt="logo company" class="logo-sm me-1" height="70">
                            </div><!--end col-->
                            <div class="col-8 text-end align-self-center">
                                <h5 class="mb-1 fw-semibold text-black"><span class="text-muted">Facture N° :</span> @invoiceNumber</h5>
                                <h5 class="mb-0 fw-semibold text-black"><span class="text-muted">Date :</span> @DateTime.Now.Date.ToShortDateString()</h5>
                            </div><!--end col-->
                        </div>
                    </div>
                </div>
            </div> <!--end col-->
        </div><!--end row-->

        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col">
                                <h4 class="card-title">Selectionner un client</h4>
                            </div><!--end col-->
                        </div>  <!--end row-->
                    </div><!--end card-header-->
                    <div class="card-body pt-0">
                        <div class="row">
                            <div class="col">
                                <InputText @bind-value="searchClient" placeholder="Rechercher..." class="form-control mb-1" @oninput="HandleSearchClient" />
                                <select class="form-select" @onchange="HandleSelectionChangedClient">
                                    <option>Selectionner un client</option>
                                    @foreach (var item in managerInvoiceViewModel.ClientItems)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                            </div><!-- end col -->
                        </div><!-- end row -->
                    </div><!--end card-body-->
                </div><!--end card-->
            </div> <!--end col-->
            <div class="col-md-6 col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <div class="row align-items-center">
                            <div class="col">
                                <h4 class="card-title">Selectionner un véhicule</h4>
                            </div><!--end col-->
                        </div>  <!--end row-->
                    </div><!--end card-header-->
                    <div class="card-body pt-0">
                        <div class="col">
                            <InputSelect @bind-Value="selectedValueVehicle" class="form-select">
                                @foreach (var item in managerInvoiceViewModel.VehicleItems)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </InputSelect>
                            <InputText @bind-value="km" placeholder="kilometrage voiture..." class="form-control mt-1" />
                        </div><!-- end col -->
                    </div><!--end card-body-->
                </div><!--end card-->
            </div> <!--end col-->
        </div><!--end row-->
        <EditForm Model="@invoiceData" OnValidSubmit="@CreateInvoiceValidSubmit">
            <div class="row justify-content-center">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered mb-0 table-centered">
                                    <thead class="table-light">
                                        <tr>
                                            <th style="width:15%">Référence</th>
                                            <th>Description</th>
                                            <th style="width:9%">Quantité</th>
                                            <th style="width:10%">Prix unitaire</th>
                                            <th style="width:9%">Remise</th>
                                            <th style="width:9%">Montant HT</th>
                                            <th style="width:9%" class="text-end">Action</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @for (int i = 0; i < managerInvoiceViewModel.Edition.PreloadedLine; i++)
                                        {
                                            var index = i; // Création d'une variable locale pour la fermeture
                                            <tr @key="index">
                                                <td>
                                                    <InputText @bind-Value="invoiceData.LineRef[index]" class="form-control" id="@($"invoiceData-LineRef-{index}")" />
                                                </td>
                                                <td>
                                                    <InputText @bind-Value="invoiceData.LineDesc[index]" class="form-control" id="@($"invoiceData-LineDesc-{index}")" />
                                                </td>
                                                <td>
                                                    <InputNumber @bind-Value="invoiceData.LineQt[index]" class="form-control" id="@($"invoiceData-LineQt-{index}")" />
                                                </td>
                                                <td>
                                                    <InputNumber @bind-Value="invoiceData.LinePrice[index]" @oninput="() => UpdateLineAmount(index)" class=" form-control" id="@($"invoiceData-LinePrice-{index}")" />
                                                </td>
                                                <td>
                                                    <InputNumber @bind-Value="invoiceData.LineDisc[index]" @oninput="() => UpdateLineAmount(index)" class="form-control" id="@($"invoiceData-LineDisc-{index}")" />
                                                </td>
                                                <td>
                                                    <InputNumber @bind-Value="invoiceData.LineMo[index]" class="form-control" id="@($"invoiceData-LineMo-{index}")" readonly />
                                                </td>
                                                <td class="text-end">
                                                    <!-- Actions -->
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table><!--end /table-->
                            </div>
                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                        </div>
                    </div>
                </div> <!--end col-->
            </div><!--end row-->

        </EditForm>

    </div> <!-- end col -->
</div> <!-- end row -->
