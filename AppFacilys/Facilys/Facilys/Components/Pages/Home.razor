    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !hasNavigated)
        {
            hasNavigated = true;

            try
            {
                bool isAuthenticated = await AuthService.IsAuthenticatedAsync();

                if (isAuthenticated)
                {
                    NavigationManager.NavigateTo("/dashboard");
                }
                else
